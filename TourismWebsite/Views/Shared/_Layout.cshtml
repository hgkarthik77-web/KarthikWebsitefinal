    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.dropdown-menu').forEach(function (menu) {
                menu.classList.remove('show');
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const destCollapse = document.getElementById('destCollapse');
            const catCollapse = document.getElementById('catCollapse');

            // FORCE CLOSE ON PAGE LOAD
            destCollapse.classList.remove('show');
            catCollapse.classList.remove('show');

            // Reset aria state
            document.querySelector('[data-bs-target="#destCollapse"]').setAttribute('aria-expanded', 'false');
            document.querySelector('[data-bs-target="#catCollapse"]').setAttribute('aria-expanded', 'false');

            // Allow only one open at a time
            destCollapse.addEventListener('show.bs.collapse', function () {
                new bootstrap.Collapse(catCollapse, { toggle: false }).hide();
            });

            catCollapse.addEventListener('show.bs.collapse', function () {
                new bootstrap.Collapse(destCollapse, { toggle: false }).hide();
            });

        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var menuCanvas = document.getElementById('menuCanvas');
            var destCollapse = document.getElementById('destCollapse');
            var catCollapse = document.getElementById('catCollapse');

            menuCanvas.addEventListener('show.bs.offcanvas', function () {

                // Force close both dropdowns when menu opens
                new bootstrap.Collapse(destCollapse, {
                    toggle: false
                }).hide();

                new bootstrap.Collapse(catCollapse, {
                    toggle: false
                }).hide();
            });

        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const destCollapse = document.getElementById("destCollapse");
            const catCollapse = document.getElementById("catCollapse");
            const offcanvasEl = document.getElementById("menuCanvas");

            // Close Category when Destinations opens
            destCollapse.addEventListener("show.bs.collapse", function () {
                new bootstrap.Collapse(catCollapse, { toggle: false }).hide();
            });

            // Close Destinations when Category opens
            catCollapse.addEventListener("show.bs.collapse", function () {
                new bootstrap.Collapse(destCollapse, { toggle: false }).hide();
            });

            // Close entire mobile menu when any link is clicked
            document.querySelectorAll("#menuCanvas a").forEach(function (link) {
                link.addEventListener("click", function () {
                    const offcanvas = bootstrap.Offcanvas.getInstance(offcanvasEl);
                    if (offcanvas) {
                        offcanvas.hide();
                    }
                });
            });

        });
    </script>
    <script>
        function validateFooterPhone() {

            let phone = document.getElementById("footerPhone").value.trim();
            let error = document.getElementById("footerPhoneError");

            error.innerText = "";

            if(phone === "") {
                error.innerText = "Phone number is required";
                return;
            }

            if(!/^[0-9]{10}$/.test(phone)) {
                error.innerText = "Enter valid 10 digit number";
                return;
            }

            alert("Thank you! We will contact you soon.");

            document.getElementById("footerPhone").value = "";
        }
    </script>
    <script>
        function attachSlider(sliderId, progressId) {
            const slider = document.getElementById(sliderId);
            const progress = document.getElementById(progressId);

            if (!slider) return;

            slider.addEventListener("scroll", () => {
                const scrollPercent =
                    slider.scrollLeft /
                    (slider.scrollWidth - slider.clientWidth);

                progress.style.width = scrollPercent * 100 + "%";
            });
        }

        attachSlider("internationalSlider", "internationalProgress");
        attachSlider("domesticSlider", "domesticProgress");
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            function attachProgress(sliderId, progressId) {
                const slider = document.getElementById(sliderId);
                const progress = document.getElementById(progressId);

                slider.addEventListener("scroll", function () {
                    const percent = slider.scrollLeft /
                        (slider.scrollWidth - slider.clientWidth);

                    progress.style.width = percent * 100 + "%";
                });
            }

            attachProgress("internationalSlider", "internationalProgress");
            attachProgress("domesticSlider", "domesticProgress");

        });
    </script>
    <script>
        function scrollCategory(direction) {

            const slider = document.getElementById("categorySlider");
            const progress = document.getElementById("categoryProgress");

            const cardWidth = slider.offsetWidth / 3;
            slider.scrollLeft += direction * cardWidth;

            const maxScroll = slider.scrollWidth - slider.clientWidth;
            const percent = (slider.scrollLeft / maxScroll) * 100;

            progress.style.width = percent + "%";
        }
    </script>
    <script>
        function scrollDestinationCategory(direction) {

            const slider = document.getElementById("destinationCategorySlider");
            const progress = document.getElementById("destinationCategoryProgress");

            if (!slider) return;

            const scrollAmount = slider.offsetWidth;
            slider.scrollLeft += direction * scrollAmount;

            const maxScroll = slider.scrollWidth - slider.clientWidth;
            const percent = (slider.scrollLeft / maxScroll) * 100;

            if(progress){
                progress.style.width = percent + "%";
            }
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const destBtn = document.querySelector('[data-bs-target="#destCollapse"]');
            const catBtn = document.querySelector('[data-bs-target="#catCollapse"]');

            const destCollapse = document.getElementById("destCollapse");
            const catCollapse = document.getElementById("catCollapse");

            destCollapse.addEventListener("show.bs.collapse", function () {
                destBtn.querySelector(".arrow-icon").style.transform = "rotate(180deg)";
            });

            destCollapse.addEventListener("hide.bs.collapse", function () {
                destBtn.querySelector(".arrow-icon").style.transform = "rotate(0deg)";
            });

            catCollapse.addEventListener("show.bs.collapse", function () {
                catBtn.querySelector(".arrow-icon").style.transform = "rotate(180deg)";
            });

            catCollapse.addEventListener("hide.bs.collapse", function () {
                catBtn.querySelector(".arrow-icon").style.transform = "rotate(0deg)";
            });

        });
    </script>   

