@{
    ViewData["Title"] = "Home";
}

<!-- ================= SLIDER ================= -->
<div class="fullwidth-slider position-relative">

    <div class="slider-brand-text">
        <h1 class="brand-title">POORNASATHYA TRAVELS</h1>
        <h3 class="brand-subtitle">Trusted Tourist Guide & Travel Services</h3>
        <p class="brand-desc">
            Explore divine, historical, and scenic destinations with comfort,
            care, and authentic local experiences.
        </p>
    </div>

    <div id="tourCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">

        <div class="carousel-inner">

            <div class="carousel-item active" data-bs-interval="2000">
                <video class="carousel-media" autoplay muted loop playsinline>
                    <source src="~/videos/nepal.mp4" type="video/mp4">
                </video>
            </div>

            <div class="carousel-item" data-bs-interval="1800">
                <img src="https://plus.unsplash.com/premium_photo-1697730464803-fcede713753e?q=80&w=2065&auto=format&fit=crop"
                     class="carousel-media" />
            </div>

            <div class="carousel-item" data-bs-interval="2000">
                <img src="https://plus.unsplash.com/premium_photo-1661962388409-eb7a041606fb?q=80&w=1470&auto=format&fit=crop"
                     class="carousel-media" />
            </div>

            <div class="carousel-item" data-bs-interval="2000">
                <img src="https://images.unsplash.com/photo-1706790574525-d218c4c52b5c?q=80&w=1470&auto=format&fit=crop"
                     class="carousel-media" />
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="https://images.unsplash.com/photo-1524492412937-b28074a5d7da?q=80&w=1600"
                     class="carousel-media" />
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=1600"
                     class="carousel-media" />
            </div>

        </div>

        <button class="carousel-control-prev" type="button"
                data-bs-target="#tourCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>    
        </button>

        <button class="carousel-control-next" type="button"
                data-bs-target="#tourCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>

    </div>
</div>

<!-- ================= HOME CARDS ================= -->
<section class="home-services">
