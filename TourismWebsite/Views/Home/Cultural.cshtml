<section class="cultural-hero text-center">
    <div class="overlay"></div>
    <div class="hero-content">
        <h1>Cultural Destinations</h1>
        <p>Explore India's rich heritage, temples, traditions and history.</p>
    </div>
</section>


<section class="cultural-section py-5">
    <div class="container">
        <div class="row g-4">

            <!-- Ayodhya -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://travelpaa.com/wp-content/uploads/2025/12/Ram-Mandir-Ayodhya.jpg"
                         alt="Ayodhya">
                    <div class="card-content">
                        <h5>Ayodhya</h5>
                        <p>Spiritual capital known for Ram Mandir and sacred ghats.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Varanasi -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://images.unsplash.com/photo-1548013146-72479768bada"
                         alt="Varanasi">
                    <div class="card-content">
                        <h5>Varanasi</h5>
                        <p>World’s oldest living city famous for Ganga Aarti.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Hampi -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://images.unsplash.com/photo-1600508774634-4e11d34730e2"
                         alt="Hampi">
                    <div class="card-content">
                        <h5>Hampi</h5>
                        <p>UNESCO heritage site with ancient temples & ruins.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Madurai -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://admin.southindiatoursandtravels.com/pages/gallery/24742.jpg"
                         alt="Madurai">
                    <div class="card-content">
                        <h5>Madurai</h5>
                        <p>Home of Meenakshi Temple and vibrant festivals.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Puri -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://www.mypuritour.com/wp-content/uploads/2022/10/mypuritourservice-1536x1020.jpg"
                         alt="Puri">
                    <div class="card-content">
                        <h5>Puri</h5>
                        <p>Famous for Jagannath Temple and Rath Yatra festival.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Khajuraho -->
            <div class="col-lg-4 col-md-6">
                <div class="cultural-card">
                    <img src="https://images.news18.com/ibnlive/uploads/2021/09/khajuraho.jpeg"
                         alt="Khajuraho">
                    <div class="card-content">
                        <h5>Khajuraho</h5>
                        <p>Renowned for stunning temple architecture and carvings.</p>
                        <a href="#" class="btn btn-sm btn-outline-light">Explore</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
