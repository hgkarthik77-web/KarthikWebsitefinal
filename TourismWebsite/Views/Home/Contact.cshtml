@{
    ViewData["Title"] = "Contact";
}

<section class="contact-hero">

    <!-- Background Video -->
    <video autoplay muted loop playsinline class="contact-video">
        <source src="https://videos.pexels.com/video-files/1757800/1757800-hd_1920_1080_25fps.mp4" type="video/mp4">
    </video>

    <div class="contact-overlay"></div>

    <!-- CENTER TITLE ONLY -->
    <div class="contact-title-wrapper">
        <div class="top-line"></div>
        <h1>CONTACT US</h1>
    </div>
    

</section>

<section class="contact-section py-5">
    <div class="container">
        <div class="row align-items-center">

            <!-- LEFT FORM -->
            <div class="col-lg-6">
                <form class="custom-contact-form">

                    <input type="text" placeholder="Enter Name" class="form-control mb-3">
                    <input type="email" placeholder="Enter Email ID" class="form-control mb-3">
                    <input type="text" placeholder="Enter Phone No" class="form-control mb-3">
                    <input type="text" placeholder="Enter Destination" class="form-control mb-3">

                    <button type="submit" class="submit-btn">
                        Submit Now
                    </button>

                </form>
            </div>

            <!-- RIGHT IMAGE -->
            <div class="col-lg-6 text-center">
                <img src="https://hut.ae/wp-content/uploads/2024/10/Contact-us-amico.png"
                     class="img-fluid contact-image"
                     alt="Contact Illustration">
            </div>

        </div>
    </div>
</section>
